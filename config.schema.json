{
  "pluginAlias": "knx-room",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "ip": {
      "title": "KNX Router or Interface",
      "type": "string",
      "placeholder": "127.0.0.1",
      "description": "IP of the KNX Router."
    },
    "port": {
      "title": "KNX Port",
      "type": "string",
      "placeholder": "3671",
      "description": "KNX Port"
    },
    "devices": {
      "type": "array",
      "items": {
        "title": "Room Monitors",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "required": true,
            "placeholder": "Display Name for Room Monitor"
          },
          "listen_current_temperature": {
            "title": "Listen Current Temperature Address",
            "type": "string",
            "required": true,
            "placeholder": "1/1/1",
            "pattern": "^[0-9]{1,4}/[0-9]{1,4}/[0-9]{1,4}$"
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "devices",
      "type": "array",
      "orderable": false,
      "buttonText": "Add Thermostat",
      "items": [
        "devices[].name",
        "devices[].listen_current_temperature"
      ]
    },
    {
      "type": "section",
      "title": "Global",
      "expandable": true,
      "expanded": false,
      "items": [
        "ip",
        "port"
      ]
    }
  ]
}